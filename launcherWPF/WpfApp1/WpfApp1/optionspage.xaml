<Window x:Class="WpfApp1.Options"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Options" Height="300" Width="600"
        Background="#060425"
        Icon="Resources/icon.ico">
    
    <Grid>
        <RadioButton Name="DayMode" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" TextElement.Foreground="White" Checked="rbLight">Light Mode</RadioButton>
        <RadioButton Name="NightMode" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,30,0,0" TextElement.Foreground="White" Checked="rbDark">Dark Mode</RadioButton>
        <RadioButton Name="AutoTurnOff" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10,10,10,10" TextElement.Foreground="White" Checked="atOff">Not turn on at startup</RadioButton>
        <RadioButton Name="AutoTurnOn" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10,30,10,10" TextElement.Foreground="White" Checked="atOn">Turn on at startup</RadioButton>
    </Grid>
</Window>
